class Solution {
    public int solution(int price) {
        
        if(price >= 500000) {  // 50만원 이상 20% 할인
            price *= 0.8;  
        } else if (price >= 300000) {. // 30만원 이상 10% 할인
            price *= 0.9;
        } else if (price >= 100000) {. // 10만원 이상 5% 할인
            price *= 0.95;
        }
        return price;
    }
}
