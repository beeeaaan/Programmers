class Solution {
    public String solution(String s) {
        String answer = "";        
        int length = s.length();
        
        if( length % 2 == 0) {  // 짝수이면 
            answer = s.substring((length/2)-1, (length/2)+1);  // 가운데 두 글자
        } else { // 가운데 글자
            answer = s.substring((length/2), (length/2)+1);
        }
        
        return answer;
    }
}
