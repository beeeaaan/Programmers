import java.util.*;

public class Solution {
    public int solution(int n) {
        int answer = 0;
        String s = Integer.toString(n);  // 문자열로 변환
        
        for(int i = 0; i < s.length(); i++) {
            answer += Integer.parseInt(s.substring(i, i+1)); // 숫자로 변환
        }

        return answer;
    }
}
